<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Geek_Store.Views.AdicionarProdutosTela"
             Title="AdicionarProdutosTela"
             Shell.NavBarIsVisible="False">
    
    <StackLayout>
        <Image Source="geek_logo.png" 
               HeightRequest="400"
               WidthRequest="400"/>

        <Label Text="Cadastrar Produto" 
               HorizontalOptions="Center"
               FontSize="30"
               Margin="0,-50,0,50"/>

        <Grid ColumnDefinitions="100,auto,100,auto,100" 
              RowDefinitions="*,*"
              ColumnSpacing="30"
              HorizontalOptions="Center"
              RowSpacing="30">

            <!-- Nome do Produto -->
            <Label Text="Produto:"
                   FontAttributes="Bold"
                   Grid.Row="0"
                   Grid.Column="0"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>

            <Entry x:Name="txt_Nome" 
                   Placeholder="Ex: Xbox One X" 
                   Grid.Row="0"
                   Grid.Column="1"
                   WidthRequest="200"/>
            
            <!-- Descrição -->
            <Label Text="Descrição:"
                   FontAttributes="Bold"
                   Grid.Row="0"
                   Grid.Column="2"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>

            <Entry x:Name="txt_Descricao" 
                   Placeholder="Ex: Edição Especial"
                   Grid.Row="0"
                   Grid.Column="3"
                   WidthRequest="200"/>
            
            <!-- Preço Venda -->
            <Label Text="Preço de Venda:"
                   FontAttributes="Bold"
                   Grid.Row="1"
                   Grid.Column="2"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Margin="0,0,0,0"/>

            <Entry x:Name="txt_PrecoVenda" Placeholder="Ex: 100"
                   Grid.Row="1"
                   Grid.Column="3"
                   WidthRequest="100"
                   Margin="0,0,100,0"/>

            <!-- Preço Compra -->
            <Label Text="Preço de Compra:"
                   FontAttributes="Bold"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Margin="0,0,0,0"/>

            <Entry x:Name="txt_PrecoCompra" 
                   Placeholder="Ex: 150"
                   Grid.Row="1"
                   Grid.Column="1"
                   WidthRequest="100"
                   Margin="0,0,100,0"/>

            <Label Text="Quantidade"
                   FontAttributes="Bold"
                   Grid.Row="1"
                   Grid.Column="1"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Margin="50,0,0,0"/>

            <Entry x:Name="txt_Quantidade" 
                   Placeholder="Ex: 150"
                   Grid.Row="1"
                   Grid.Column="2"
                   WidthRequest="100"
                   Margin="0,0,100,0"/>
        </Grid>

        <Button Text="Salvar"
                WidthRequest="150"
                Margin="250"
                Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>